@inherits LayoutComponentBase

<div class="app-container">
    <header class="app-header">
        <div class="header-content">
            <div class="logo-section">
                <svg class="spartan-helmet" viewBox="0 0 100 100" width="48" height="48">
                    <defs>
                        <linearGradient id="helmetGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                            <stop offset="0%" style="stop-color:#8B4513"/>
                            <stop offset="50%" style="stop-color:#654321"/>
                            <stop offset="100%" style="stop-color:#3D2914"/>
                        </linearGradient>
                        <linearGradient id="crestGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                            <stop offset="0%" style="stop-color:#DC143C"/>
                            <stop offset="100%" style="stop-color:#8B0000"/>
                        </linearGradient>
                    </defs>
                    <ellipse cx="50" cy="35" rx="32" ry="28" fill="url(#helmetGradient)" stroke="#2D1810" stroke-width="2"/>
                    <path d="M30 45 Q25 55 28 75 L35 75 L38 50 Z" fill="url(#helmetGradient)" stroke="#2D1810" stroke-width="1.5"/>
                    <path d="M70 45 Q75 55 72 75 L65 75 L62 50 Z" fill="url(#helmetGradient)" stroke="#2D1810" stroke-width="1.5"/>
                    <rect x="32" y="38" width="36" height="25" rx="3" fill="#1a1a1a" opacity="0.9"/>
                    <path d="M38 12 Q50 5 62 12 L58 35 Q50 32 42 35 Z" fill="url(#crestGradient)" stroke="#8B0000" stroke-width="1"/>
                    <ellipse cx="50" cy="35" rx="32" ry="28" fill="none" stroke="#1a1a1a" stroke-width="0.5" opacity="0.3"/>
                </svg>
                <div class="title-section">
                    <h1>Environment Builder</h1>
                    <span class="tagline">Test Brutally - Build Your Level of Complexity</span>
                </div>
            </div>
            <nav class="nav-links">
                <NavLink href="/" Match="NavLinkMatch.All">Dashboard</NavLink>
                <NavLink href="/build">Build</NavLink>
                <NavLink href="/operations">Operations</NavLink>
                <NavLink href="/settings">Settings</NavLink>
            </nav>
        </div>
    </header>

    <main class="app-main">
        @Body
    </main>

    <footer class="app-footer">
        <span>Environment Builder v1.0.0</span>
        <span>|</span>
        <span>üõ°Ô∏è Test Brutally</span>
    </footer>
</div>

